
# Configuration du serveur
PORT=3001
CORS_ORIGIN=http://localhost:3000
BODY_LIMIT=1mb

# JWT
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRATION=24h

# Postgres par défaut (utilisé si aucune connexion n'est spécifiée)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SSL=false
POSTGRES_REJECT_UNAUTHORIZED=true

# Configuration du pool par défaut
PG_MAX_CONNECTIONS=10
PG_IDLE_TIMEOUT=30000
PG_CONNECTION_TIMEOUT=5000
PG_ALLOW_EXPLICIT_MAX=false

# Redis (optionnel)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Sécurité
BCRYPT_SALT_ROUNDS=10
CSRF_PROTECTION=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CONTENT_SECURITY_POLICY=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH=/metrics
LOGGING_LEVEL=info

# Admin par défaut (développement uniquement)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Prisma Database URL (format DSN pour Prisma)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres?schema=public

# Configuration pour les intégrations externes
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
STORAGE_CLOUD_NAME=
STORAGE_API_KEY=
STORAGE_API_SECRET=

# Passerelles de paiement
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Sécurité des API
API_KEY_ENABLED=true
API_KEY_HEADER_NAME=x-api-key
